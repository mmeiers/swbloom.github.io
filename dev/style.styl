// variables
$yellow = #EBE0CA

// libraries
@import 'grid.styl'


// embedded fonts
@font-face 
	font-family: 'dubiel';
	src: url('../fonts/dubiel.ttf')  format('truetype'), /* Safari, Android, iOS */
	// other compatibilities commented out since this exclusively for chrome browsers
	//url('fonts/abc-font.eot'); /* IE9 Compat Modes */
	//src: url('fonts/abc-font.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
	//     url('fonts/abc-font.woff') format('woff'), /* Modern Browsers */
	//     url('fonts/abc-font.svg#svgFontName') format('svg') /* Legacy iOS */
@font-face 
	font-family: 'bodoni';
	src: url('../fonts/bodoni.ttf')  format('truetype'), /* Safari, Android, iOS */
	// other compatibilities commented out since this exclusively for chrome browsers
	//url('fonts/abc-font.eot'); /* IE9 Compat Modes */
	//src: url('fonts/abc-font.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
	//     url('fonts/abc-font.woff') format('woff'), /* Modern Browsers */
	//     url('fonts/abc-font.svg#svgFontName') format('svg') /* Legacy iOS */

html
	background url(../images/background.jpg) no-repeat center center fixed
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	


.left
	column(7)

.right 
	column(5)
	padding-top: 8%;
	
.lead
	font-size: 1.8em;
	font-family dubiel;
	color: $yellow
	text-align center

#time 
	font-family: bodoni
	color #fff
	font-size 200%
	

.yellow 
	color $yellow

.title 
	text-align: center;
	padding-top: 10%;
	font-size: 130px
	color white;