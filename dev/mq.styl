// Media Queries
// Useage: @media (breakpoint)
// Example: @media mq-small-screens
//				<insert media query selectors here>
//
//

// media query variables
$small-screens = 1280px;
$chrome-pixel = 1360px;
$medium-screens = 1746px;
$large-screens = 3840px;
$x-large-screens = 3840px;

// media query functions
mq-small-screens = "only screen and (min-width: " + $small-screens + ")"
mq-chrome-pixel = "only screen and (min-width: " + $chrome-pixel + ")"
mq-medium-screens = "only screen and (min-width: " + $medium-screens + ")"
mq-large-screens = "only screen and (min-width: " + $large-screens + ")"
mq-x-large-screens = "only screen and (min-width: " + $x-large-screens + ")"
	

/* Narrow Screens --------- */
@media mq-small-screens
	video#bgvid 
		object-fit: cover;
		width 100%
		height 50%


	#time 
		font-family: $alex
		color $blue
		font-size 100px
		text-shadow: 1px 1px 30px #000 
	.headline
		font-size: 100px
		font-family $alex;
		text-align center;
		color #fff
		margin-top 40px


			
/* Chrome Pixel ----------- */
@media mq-chromepixel
	video#bgvid 
		object-fit: cover;
		width 100%
		height 50%


	#time 
		font-family: 'alex_brushregular'
		color $blue
		font-size 100px
		text-shadow: 1px 1px 30px #000 
	.headline
		font-size: 120px
		font-family alex_brushregular;
		text-align center;
		color #fff
		margin-top 40px

@media mq-medium-screens
	.wrapper 
		margin 50px

	.headline
		font-size: 150px
		font-family alex_brushregular;
		text-align center;
		color #fff
		margin-top 40px
	#time 
		font-family: $alex
		color $blue
		font-size 130px
		margin-top 50px
		text-shadow: 1px 1px 30px #000 

	.title
		color $blue
	.logo
		width 70%
		height 70%
	
	svg
		width 12%
		height 12%
		

@media mq-large-screens

	.headline
		font-size: 200px
		font-family $alex
		text-align center;
		color #fff
		margin-top 40px
	.logo
		width 80%
		height 80%
	#time 
		font-family: $alex
		color $blue
		font-size 200px
		margin-top 50px
		text-shadow: 1px 1px 30px #000 

	svg
		width 20%
		height 20%
		


/* 4k ----------- */
@media x-large-screens
	.wrapper 
		margin 100px
	.headline
		font-size: 200px
		font-family alex_brushregular;
		text-align center;
		color #fff
	#time 
		font-family: 'alex_brushregular'
		color $blue
		font-size 300px
		text-shadow: 1px 1px 30px #000 
