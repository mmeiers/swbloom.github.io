body 
	background-color: black;


video#bgvid 
	object-fit cover
	
	min-width: 100%; min-height: 100%;
	width: auto; height: auto; z-index: -100;
	background: url(polina.jpg) no-repeat;
	background-size: contain;


.headline
	position absolute
	width 100%
	font-size: 120px
	font-family alex_brushregular;
	text-align center
	color #fff
	text-shadow: 1px 1px 30px #000 
	
#time 
	font-family: 'alex_brushregular'
	color $blue
	font-size 200px
	text-shadow: 1px 1px 30px #000 
	

.yellow 
	color $yellow

.wrapper
	margin-left 50px
.logos
	position absolute
	bottom 0
	left 0
	padding 20px

.logo 
	width 50%
	height 50%
	padding-right 10px
.title
	color #fff

.your_company
	position absolute
	bottom 0
	right 0
	text-align right

.social
	width 22%
	height 22%
	padding 2px
	
.vidcontainer
	width 100%
	height 100%
	position absolute
	z-index -999
	font-size 0
	

/* SVG Animations */
.svg-elephant
	display inline
	padding-left 4px
	vertical-align middle
	width 200%
	height 200%
	#head
		transition 1s all
		transform-origin 15% 35%
	&:hover
		#head
			transform rotate(-36deg);
.svg-git
	display inline
	color #fff
	transition 1s all
	&:hover
		transform rotate(-360deg);
	
			
