// variables
$yellow = #EBE0CA
$blue = #55CEFF
$bebas = 'bebas_neueregular'

// libraries
@import 'grid.styl'


// embedded fonts
@font-face 
	font-family: 'dubiel';
	src: url('../fonts/dubiel.ttf')  format('truetype'), /* Safari, Android, iOS */
	// other compatibilities commented out since this exclusively for chrome browsers
	//url('fonts/abc-font.eot'); /* IE9 Compat Modes */
	//src: url('fonts/abc-font.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
	//     url('fonts/abc-font.woff') format('woff'), /* Modern Browsers */
	//     url('fonts/abc-font.svg#svgFontName') format('svg') /* Legacy iOS */
@font-face {
	font-family:'BodoniSvtyTwoOSITCTT-Bold';
	src: url('BodoniSvtyTwoOSITCTT-Bold_latin+latin-ext_gdi.eot');
	src: url('BodoniSvtyTwoOSITCTT-Bold_latin+latin-ext_gdi.eot?#iefix') format('embedded-opentype'),
		url('BodoniSvtyTwoOSITCTT-Bold_latin+latin-ext_gdi.woff') format('woff'),
		url('BodoniSvtyTwoOSITCTT-Bold_latin+latin-ext_gdi.ttf') format('truetype'),
		url('BodoniSvtyTwoOSITCTT-Bold_latin+latin-ext_gdi.svg#BodoniSvtyTwoOSITCTT-Bold') format('svg');
	font-weight: 700;
	font-style: normal;
	font-stretch: normal;
	unicode-range: U+0020-2044;
}
@font-face {
    font-family: 'bebas_neueregular';
    src: url('../fonts/bebasneue-webfont.eot');
    src: url('../fonts/bebasneue-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/bebasneue-webfont.woff2') format('woff2'),
         url('../fonts/bebasneue-webfont.woff') format('woff'),
         url('../fonts/bebasneue-webfont.ttf') format('truetype'),
         url('../fonts/bebasneue-webfont.svg#bebas_neueregular') format('svg');
    font-weight: normal;
    font-style: normal;

}
@font-face {
    font-family: 'alex_brushregular';
    src: url('../fonts/alexbrush-regular-webfont.eot');
    src: url('../fonts/alexbrush-regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/alexbrush-regular-webfont.woff2') format('woff2'),
         url('../fonts/alexbrush-regular-webfont.woff') format('woff'),
         url('../fonts/alexbrush-regular-webfont.ttf') format('truetype'),
         url('../fonts/alexbrush-regular-webfont.svg#alex_brushregular') format('svg');
    font-weight: normal;
    font-style: normal;

}
body 
	background-color: black;

video#bgvid 
	position: fixed; right: 0; bottom: 0;
	min-width: 100%; min-height: 100%;
	width: auto; height: auto; z-index: -100;
	background: url(polina.jpg) no-repeat;
	background-size: contain;


.headline
	font-size: 120px
	font-family alex_brushregular;
	text-align center;
	color #fff
	text-shadow: 1px 1px 30px #000 
	
#time 
	font-family: 'bebas_neueregular'
	color $blue
	font-size 200px
	text-shadow: 1px 1px 30px #000 
	

.yellow 
	color $yellow

.wrapper
	margin-left 50px
.logos
	position absolute
	bottom 0
	left 0
	padding 20px

.title
	color #fff

.your_company
	text-shadow: 1px 1px 30px #000 
	font-family $bebas
	position absolute
	bottom 0
	right 0
	font-size 100px
	color $blue
	padding 20px

.social
	width 40%
	height 40%

/* Chrome Pixel ----------- */
@media only screen and (min-width : 1280px) 
	video#bgvid 
		left -425px;
	.your_company
		font-size 70px
		color $blue

	#time 
		font-family: 'alex_brushregular'
		color $blue
		font-size 100px
		text-shadow: 1px 1px 30px #000 
	.headline
		font-size: 120px
		font-family alex_brushregular;
		text-align center;
		color #fff
		margin-top 40px

@media only screen and (min-width : 1360px)
	.wrapper 
		margin 50px

	.headline
		font-size: 100px
		font-family alex_brushregular;
		text-align center;
		color #fff
		margin-top 40px
	#time 
		font-family: 'alex_brushregular'
		color $blue
		font-size 100px
		margin-top 50px
		text-shadow: 1px 1px 30px #000 
	.your_company
		font-size 80px
		color red
	.title
		color $blue
	video#bgvid 
		left 0px

@media only screen and (min-width : 1920px) 
	.your_company
		color #fff


/* 4k ----------- */
@media only screen and (min-width : 3840px) 
	.wrapper 
		margin 100px
	.headline
		font-size: 200px
		font-family alex_brushregular;
		text-align center;
		color #fff
	#time 
		font-family: 'alex_brushregular'
		color $blue
		font-size 300px
		text-shadow: 1px 1px 30px #000 
	.your_company
		font-size 200px
		color $blue
	